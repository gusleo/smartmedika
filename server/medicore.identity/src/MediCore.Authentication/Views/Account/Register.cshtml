@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_CredentialLayout";
}

<div class="wrap-login100">
	<section>
		<form asp-route-returnurl="@ViewData[" ReturnUrl"]" method="post" class="login100-form validate-form">
			<span class="login100-form-brand">
				<img src="~/images/logo-white.png" height="170" />
			</span>
			<span class="login100-form-title p-b-34 p-t-27">
				Create an account
			</span>
			<div asp-validation-summary="All" class="text-light"></div>
			<div class="wrap-input100 validate-input" data-validate="The First Name field is required.">
				<input class="input100" placeholder="First Name" asp-for="FirstName">
				<span class="focus-input100" data-placeholder="&#xf207;"></span>
			</div>

			<div class="wrap-input100 validate-input" data-validate="The Last Name field is required.">
				<input class="input100" placeholder="Last Name" asp-for="LastName">
				<span class="focus-input100" data-placeholder="&#xf207;"></span>
			</div>
			<div class="wrap-input100 validate-input" data-validate="The Email field is required.">
				<input class="input100" placeholder="Email" asp-for="Email">
				<span class="focus-input100" data-placeholder="&#xf15a;"></span>
			</div>
			<div class="wrap-input100 validate-input" data-validate="The Password field is required.">
				<input class="input100" placeholder="Password" asp-for="Password">
				<span class="focus-input100" data-placeholder="&#xf191;"></span>
			</div>
			<div class="wrap-input100 validate-input" data-validate="Konfirmasi password tidak sesuai">
				<input class="input100" placeholder="Confirm Password" asp-for="ConfirmPassword">
				<span class="focus-input100" data-placeholder="&#xf191;"></span>
			</div>

			<div class="container-login100-form-btn">
				<button type="submit" class="login100-form-btn">
					Sign Up
				</button>
			</div>
		</form>
		<div class="text-center p-t-10">
			<span class="txt1">
				Already have an account?  <a class="gold-link" style="font-weight:normal" asp-action="Login" asp-controller="Account">Login Here</a>
			</span>
		</div>
	</section>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


